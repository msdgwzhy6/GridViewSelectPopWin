<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 标题字体样式 -->
    <style name="TextTitle" parent="@style/TextStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 正常字体样式 -->
    <style name="TextNormal" parent="@style/TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextLittle" parent="@style/TextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextLittleGray" parent="@style/TextLittle">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/bottom_menu_enter</item>
        <item name="android:windowExitAnimation">@anim/bottom_menu_exit</item>
    </style>

</resources>
